<!-- Site header -->
<header class="main-header">
	
	<!-- Page title -->
	<h3>
		<a id="show-menu" href="#" class="btn btn-primary"><i class="icon-reorder"></i></a>
		<%- title.toUpperCase() || "DASHBOARD" %>
	</h3>
	
	<!-- Profile dropdown -->
	<nav class="user-profile">
		<a href="#" class="user-dropdown" data-toggle="dropdown">
			<i class="icon-user"></i>
			<span><%- user.name %></span>
			<i class="icon-caret-down"></i>
		</a>
		<ul class="dropdown-menu" role="menu">
			<li><a href="#">Profile</a></li>
			<li><a href="#">Messages</a></li>
			<li><a href="#">Tasks</a></li>
			<li><a href="error.html">Show error</a></li>
			<li><a data-module="user" data-method="logout">Logout</a></li>
		</ul>
	</nav>

</header>

<section class="main-content padding">

	<div class="row">
		
		<!-- Full width table -->
		<div class="col-lg-12">
			
			<div class="module no-padding">
				<div class="module-header"><h4>ACTIVE RULES</h4></div>
				<div class="module-content table-responsive">
					<table class="table table-bordered">
						<thead>
							<tr>
								<th>ID</th>
								<th>Bundle</th>
								<th>Query</th>
								<th>Steps</th>
								<th>Status</th>
								<th class="text-right">Actions</th>
							</tr>
						</thead>
						<tbody>
							<% for(var i = 0; i < rules.length; i++){ %>
							<tr>
								<td><%= rules[i]._id %></td>
								<td><%= rules[i].source.bundle %></td>
								<td><%= rules[i].source.q || rules[i].source.q || "null" %></td>
								<td><%= JSON.stringify(rules[i].tunnel.steps) %></td>
								<td>
									<div class="progress">
										<div class="progress-bar progress-bar-success" style="width: 55%;"></div>
									</div>
								</td>
								<td class="text-right">
									<button data-on="click" data-event="client/render" data-pub='{"url": "/rules/resume?id=<%= rules[i]._id %>"}' class="btn btn-xs btn-info"><i class="icon-eye-open"></i></button>
									<button class="btn btn-xs btn-success">Edit</button>
								</td>
							</tr>
							<% } %>
						</tbody>
					</table>
				</div>
			</div>

		</div>
		<!-- /Full width table -->

	</div>

</section>