    <!-- Le styles -->
    <link href="/assets/login/css/bootstrap.min.css" rel="stylesheet">
    <link href="/assets/login/css/bootstrap-responsive.min.css" rel="stylesheet">

    <link rel="stylesheet" href="/assets/login/css/typica-login.css">

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
