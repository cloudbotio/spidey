  <body>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="logo-title" href="/"><span class="blue">spidey</span>.cloudbot.io</a>
        </div>
      </div>
    </div>

    <div class="container">

        <div id="login-wraper">
            <form class="form login-form">
                <legend>Login to your <span class="blue">Dashboard</span></legend>
            
                <div class="body">
                    <label>Email</label>
                    <input type="text" id="email">
                    
                    <label>Password</label>
                    <input type="password" id="password">
                </div>
            
                <div class="footer">
                    <label class="checkbox inline">
                        <input type="checkbox" id="inlineCheckbox1" value="option1"> Remember me
                    </label>
                                
                    <button type="submit" class="btn btn-success">Login</button>
                </div>
            
            </form>
        </div>

    </div>

    <footer class="white navbar-fixed-bottom">
      Forgot your password? &nbsp; <a href="/reset" class="btn btn-black">Get it back here!</a>
    </footer>


