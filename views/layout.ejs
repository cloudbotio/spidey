<!DOCTYPE html>
<html>
	<head>
		<title>spidey &dash; <%- title || "Dashboard" %></title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<!-- Incude bootstrap -->
		<link href="/assets/css/bootstrap.min.css" rel="stylesheet" media="screen">
		<!-- Custom icons -->
		<link href="http://netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
		<!-- Custom fonts -->
		<link href='//fonts.googleapis.com/css?family=Maven+Pro:400,500,700,900' rel='stylesheet' type='text/css'>
		<!-- Main stylesheet -->
		<link href="/assets/css/kato.css" rel="stylesheet">
		<link href="/assets/css/style.css" rel="stylesheet">
	</head>
	<body data-subscribe="app/destroy" data-action="$(this).remove()">

	<div id="wrapper">
	
		<!-- Sidebar -->
		<aside id="sidebar-wrapper">
			
			<!-- Icons Sidebar -->
			<ul class="sidebar-icon">
				<li class="sidebar-header"><a href="/"><img src="/assets/img/logo.png" alt="Logo" /></a></li>
				<li><a href="#tabrules" data-toggle="tab"><i class="icon-rss icon-large"></i></a></li>
				<li><a href="#tabstats" data-toggle="tab"><i class="icon-bar-chart icon-large"></i></a></li>
				<li><a href="#tabpipelines" data-toggle="tab"><i class="icon-tasks icon-large"></i></a></li>
				<li><a href="#tabaccount" data-toggle="tab"><i class="icon-gear icon-large"></i></a></li>
			</ul>
			<!-- /Icons Sidebar -->
			
			<!-- Tabs Sidebar -->
			<div class="tab-content">

				<ul class="sidebar-group tab-pane active" id="tabrules">
					<li class="navigation-header">RULES</li>
					<li><a href="/rules">My Rules</a></li>
					<li><a href="/rules/create">Create a Rule</a></li>
					<li><a href="/marketplace/rules">Marketplace</a></li>
				</ul>

				<ul class="sidebar-group tab-pane" id="tabstats">
					<li class="navigation-header">STATISTICS</li>
					<li><a href="/stats">Resume</a></li>
					<li><a href="/reports">Advanced Reports</a></li>
					<li><a href="/stats/export">Export Data</a></li>
				</ul>

				<ul class="sidebar-group tab-pane" id="tabpipelines">
					<li class="navigation-header">PIPELINES</li>
					<li><a href="/pipelines">Available Pipelines</a></li>
					<li><a href="/pipelines/custom">Custom Pipelines</a></li>
					<li><a href="/marketplace/pipelines">Marketplace</a></li>
				</ul>
				
				<ul class="sidebar-group tab-pane" id="tabaccount">
					<li class="navigation-header">MY ACCOUNT</li>
					<li><a href="/settings">Settings</a></li>
					<li><a href="/settings/billing">Billing</a></li>
					<li><a href="/settings/performance">Performance</a></li>
					<li><a data-module="user" data-method="logout">Logout</a></li>
				</ul>

			</div>
			<!-- /Tabs Sidebar -->

		</aside>
		<!-- /Sidebar -->
		
		<!-- Content area -->
		<div id="content-wrapper">
			<div class="overlay" id="overlay" data-subscribe="controller/loading" data-action="$('#overlay').fadeIn('fast')">
				<span class="loadinggif"></span>
			</div>

			<div data-subscribe="controller/ready" data-action="$('#overlay').fadeOut('fast')"></div>

			<!-- /Site header -->
			<div id="container-wrapper">				
				<div data-container="controllers">
				<%- body %>
				</div>
			</div>

		</div>
		<!-- /Content area -->

	</div>
	<!-- system deps -->
	<script src="/socket.io/socket.io.js"></script>
	<script src="/js/lib/jquery.min.js"></script>
	<script src="/js/lib/underscore.min.js"></script>
	<script src="/js/lib/raphael.min.js"></script>
	<script src="/js/lib/morris.min.js"></script>
	<script src="/js/lib/bootstrap.min.js"></script>
	<script src="/js/lib/fullcalendar.min.js"></script>
	<script src="/js/lib/theme.js"></script>
	<script src="/js/lib/sparklines.min.js"></script>
	<script src="/js/lib/knob.js"></script>
	
	<!-- js -->
	<script src="/js/app.js"></script>
	<script src="/js/modules.js"></script>

	<script type="text/javascript">
		var app = new Application(sandbox);
		$(document).ready(function(){
			app.startAll();
		})
	</script>
	
</body>
</html>